<div>
  <div>
    {{ section.settings.title }}
  </div>
  <div>
    <p>
      {{ section.settings.subtext_title }}
    </p>
  </div>

  <div>
    {% if section.settings.button_url == blank %}

      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a href="{{ shop_url }}">
      {{ section.settings.button_label }}
    </a>
  </div>
</div>

{% schema %}
  {
    "name": "Template 404",
    "tag": "section",
    "class": "someClass",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "404",
        "label": "404 Heading Title"
      }, {
        "type": "text",
        "id": "subtext_title",
        "default": "The page you were looking for is not found.",
        "label": "404 Subtext Title"
      }, {
        "type": "text",
        "id": "button_label",
        "default": "Go to Home Page",
        "label": "Button Label"
      }, {
        "type": "text",
        "id": "button_url",
        "label": "Button URL"
      }
    ]
  }
{% endschema %}